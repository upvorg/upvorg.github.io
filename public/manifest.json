{
  "name": "Your Anime",
  "short_name": "Your Anime",
  "description": "Anime Web App.\nMore info & source code here: https://github.com/upvorg/cdn",
  "start_url": "./",
  "version": "0.0.1",
  "manifest_version": 2,
  "app": {
    "background": {
      "scripts": ["js/background.js"]
    }
  },
  "permissions": [
    "notifications",
    "webview",
    { "fileSystem": ["write"] },
    "storage",
    "unlimitedStorage",
    "fullscreen"
  ],
  "icons": [
    {
      "src": "ic_launcher_round.png",
      "sizes": "96x96",
      "type": "image/png"
    },
    {
      "src": "ic_launcher_round.png",
      "sizes": "144x144",
      "type": "image/png"
    },
    {
      "src": "ic_launcher_round.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "ic_launcher_round.png",
      "type": "image/png",
      "sizes": "512x512"
    },
    {
      "src": "ic_launcher_round.png",
      "type": "image/svg+xml",
      "sizes": "513x513"
    }
  ],
  "theme_color": "#6668ab",
  "background_color": "#6668ab",
  "display": "standalone"
}
